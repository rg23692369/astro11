{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "env": {
    "MY_ENV_VAR": "my-value"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/old-path",
      "status": 301,
      "headers": {
        "Location": "/new-path"
      }
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron-job",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "api/my-function.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
