{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "MONGO_URI": "your-mongo-uri-here",
    "JWT_SECRET": "your-jwt-secret-here",
    "RAZORPAY_KEY_ID": "your-razorpay-key-id-here",
    "RAZORPAY_KEY_SECRET": "your-razorpay-key-secret-here",
    "CLIENT_URL": "http://localhost:5173"
  },
  "functions": {
    "src/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
